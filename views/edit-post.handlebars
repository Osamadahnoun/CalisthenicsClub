<form class="m-5 w-75 forum-post-form p-5 edit-post-form" data-aos="zoom-in">
    <div class="post-title h2">Edit Forum Post</div>
    <div class="form-group log-color">
      <label for="post-title">Title</label>
      <input type="text" class="form-control" id="post-title" value="{{post.title}}" name="post-title">
    </div>
    <div class="form-group d-flex flex-column log-color">
      <label for="post-body">Body</label>
      <textarea type ="text" id="post-body" name="post-body">{{post.body}}</textarea>
    </div>
    <button type="submit" class="btn btnFunction mt-3 edit-post-btn">Save Post</button>
    <button type="submit" class="btn btnFunction mt-3 delete-post-btn">Delete Post</button>
  </form>

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>