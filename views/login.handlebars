<div class="container-fluid">
    <div class="container-fluid d-flex justify-content-center flex-wrap">
        <img src="logo.png" class="img-fluid logo m-3" alt="Responsive image">
        <form class="p-5 entire-form m-3">
            <div class="title">
                <div class="h2">Welcome To CalisthenicsClub!</div>
                <div class="h2">Login Below!</div>
                <div class="h2">If you Don't Have an Account, Click Signup Instead!</div>
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">Email address</label>
                <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
                <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
              </div>
            <div class="form-group">
              <label for="exampleInputPassword1">Password</label>
              <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
            </div>
            <button type="submit" class="btn text-white m-2">Submit</button>
            <div class="sign-up">
                <a href="/signup" class="text-decoration-none signup">Signup Instead!</a>
            </div>
          </form>
        
    </div>
</div>